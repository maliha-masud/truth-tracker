{
  "manifest_version": 3,
  "name": "Truth Tracker Extension",
  "version": "1.0",
  "description": "Check the classification of news text.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://127.0.0.1:5000/"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/tt-icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://127.0.0.1:5000;"
  }
}
